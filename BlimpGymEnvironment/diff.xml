<mujoco>

  <compiler assetdir="assets" />

  <compiler angle="degree" coordinate="local" inertiafromgeom="true" />
  <!-- <option gravity="0 0 -9.8"  density="1.293" viscosity="1.8e-5" > -->
  <!-- <option  gravity="0 0 -9.8" viscosity="1.8e-5" integrator="implicit" > -->
  <option gravity="0 0 -9.8" viscosity="1.8e-5" integrator="RK4">
    <!-- <flag contact="enable"/> -->
  </option>

  <default>
    <motor ctrlrange="-1 1" />
    <default class="imported">
      <mesh scale="0.001 0.001 0.001" />
    </default>


    <default class="balloon">
    <geom density="0.167" fluidshape="ellipsoid" />
    </default>

    </default>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
    <rgba haze="0.15 0.25 0.35 1" />
    <global azimuth="-20" elevation="-20" ellipsoidinertia="true" />
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="1"
      height="30720" />
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
      rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300" />
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
      reflectance="0.2" />
    <mesh file="PropGuard.obj" class="imported"/>
    <mesh file="ServoMount.obj" class="imported"/>
    <mesh file="Board Mount.obj" class="imported" />
    <mesh file="House.obj" scale="0.3 0.3 0.3"/>

 </asset>


  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" />
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />
    <geom type="mesh" mesh="House" pos="1 1 0.1"/>
  </worldbody>


  <worldbody>
    <body gravcomp="7.2" pos="-20 -20 5">
      <freejoint />
      <geom name="mylar" type="ellipsoid" size="0.65 0.56 0.56" rgba="0.6 0 0 1" mass="1"/>
      <site name="mountBalloon1" pos="0 -.05 -0.56"/>
      <site name="mountBalloon2" pos="0 .05 -0.56"/>
    </body>
    <body pos="-20 -20 4.40">
      <freejoint/>
        <site name="mountGondola1" pos=" 0 -.05  0"/>
        <site name="mountGondola2" pos="0 .05  0"/>
        <camera name="blimpCamera" pos="0 0 -0.02" euler="90 -90 0" />
        <geom type="mesh" mesh="Board Mount" euler="0 0 0" mass="0.02"/>
        <geom name="carbonFiberRod" type="box" size="0.004 0.5 0.004"  mass="5.85"/>
      <!-- <geom name="board" type="box" size="0.004 0.5 0.004"  mass="1"/> -->
        <body name = "m1" pos = "0 -0.51 0">
          <geom type="mesh" mesh="ServoMount" euler="0 -90 -90"/>
          <body name="guard1" pos="0 -0.05 0" euler="0 0 0" >
          <joint axis="0 1 0" name="servo1" pos="0.0 -0.05 0.0" range="0 180" damping="0.0003" type="hinge"/>
            <geom type="mesh" mesh="PropGuard" euler = "180 0 60"  mass="0.08"/>
            <body name="prop1">
              <joint axis = "0 1 0" name="propeller1" damping="0.0003" type="hinge"/>
              <geom type="ellipsoid" size="0.035 0.006 0.0001" mass="0.08"/>
              <site name="thrust1" pos="0 0 0.008" />
            </body>
          </body>
        </body>
        <body name = "m2" pos = "0 0.51 0">
          <geom type="mesh" mesh="ServoMount"  euler="0 90 90"/>
          <body name="guard2" pos="0 0.05 0" euler="0 0 0">
          <joint axis="0 1 0" name="servo2" pos="0.0 0.05 0.0" range="0 180" damping="0.0003" type="hinge"/>
            <geom type="mesh" mesh="PropGuard" euler = "180 0 -120" mass="0.08" />
            <body name="prop2">
              <joint axis = "0 1 0" name="propeller2" damping="0.0003" type="hinge"/>
              <geom type="ellipsoid" size="0.035 0.006 0.0001"  mass="0.08"/>
              <site name="thrust2" pos="0 0 0" />
            </body>
          </body>
        </body>
    </body>
    </worldbody>



  <actuator>

    <motor name="servo1" ctrllimited="true" forcerange="0 10" ctrlrange="0 4" joint="servo1" />
    <motor name="servo2"ctrllimited="true" forcerange="0 10" ctrlrange="0 4" joint="servo2" />
    <motor name="motor1" site="thrust1"  gear="0 0 1 0 0 0" ctrlrange="-2 2"/>
    <motor name="motor2" site="thrust2" gear="0 0 1 0 0 0" ctrlrange="-2 2"/>

  </actuator>



  <tendon>
    <spatial range="0 0.0001">
      <site site="mountBalloon1"/>
      <site site="mountGondola1"/>
    </spatial>

    <spatial range="0 0.0001">
      <site site="mountBalloon2"/>
      <site site="mountGondola2"/>
    </spatial>



  </tendon>


</mujoco>
